<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Ong.NewActivityFragment"
             android:id="@+id/fragment_new_activity"

>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center"
            xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textSize="30dp"
                  android:textColor="@color/colorBlack"
                  android:text="Registro"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:text="Nombre"
                android:labelFor= "@+id/etVolgName"
        />

        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/etVolgName"
                android:paddingLeft="20dp"
                android:hint="Nombre y Apellidos"
                android:layout_marginVertical="10dp"
                android:background="@drawable/input"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:text="Ubicación"
                android:labelFor= "@+id/etVoladdress"
        />

        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/etVoladdress"
                android:paddingLeft="20dp"
                android:background="@drawable/input"
                android:layout_marginVertical="10dp"
                android:textColor="@color/colorBlack"
                android:hint="Ubicación"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:text="Fecha de nacimiento"
                android:labelFor= "@+id/etBirthDate"
        />

        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/etBirthDate"
                android:paddingLeft="20dp"
                android:background="@drawable/input"
                android:layout_marginVertical="10dp"
                android:textColor="@color/colorBlack"
                android:hint="Fecha nacimiento: dd/mm/aaaa"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:text="Email"
                android:labelFor= "@+id/etVolmail"
        />
        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/etVolmail"
                android:paddingLeft="20dp"
                android:background="@drawable/input"
                android:layout_marginVertical="10dp"
                android:textColor="@color/colorBlack"
                android:hint="Correo electrónico"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:text="Contraseña"
                android:labelFor= "@+id/etVolPass"
        />

        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/etVolPass"
                android:paddingLeft="20dp"
                android:background="@drawable/input"
                android:layout_marginVertical="10dp"
                android:inputType="textPassword"
                android:textColor="@color/colorBlack"
                android:hint="Contraseña"
        />


        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/btnRegisterVol"
                android:backgroundTint="@color/colorOrange"
                android:text="Registrar"
                android:background="@drawable/input"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center"/>

    </LinearLayout>

</FrameLayout>