<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Ong.NewActivityFragment"
             android:id="@+id/fragment_new_activity"

>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center"
            xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textSize="30dp"
                  android:textColor="@color/colorBlack"
                  android:text="Registro"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                  android:layout_height="wrap_content"
                  android:gravity="left"
                  android:textSize="20dp"
                  android:textColor="@color/colorBlack"
                  android:text="Nombre"
                android:labelFor= "@+id/etOngName"
        />

        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/etOngName"
                android:paddingLeft="20dp"
                android:hint="Nombre Asociación"
                android:layout_marginVertical="10dp"
                android:background="@drawable/input"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:text="Correo electrónico"
                android:labelFor= "@+id/etOngmail"
        />

        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/etOngmail"
                android:paddingLeft="20dp"
                android:background="@drawable/input"
                android:layout_marginVertical="10dp"
                android:textColor="@color/colorBlack"
                android:hint="Correo electrónico"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:text="Correo electrónico"
                android:labelFor= "@+id/etOngPass"
        />

        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/etOngPass"
                android:paddingLeft="20dp"
                android:background="@drawable/input"
                android:layout_marginVertical="10dp"
                android:inputType="textPassword"
                android:textColor="@color/colorBlack"
                android:hint="Contraseña"
        />

        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/btnRegisterOng"
                android:backgroundTint="@color/colorOrange"
                android:text="Registrar"
                android:background="@drawable/input"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center"/>

    </LinearLayout>

</FrameLayout>